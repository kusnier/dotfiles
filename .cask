#!/bin/bash

# “To install, drag this icon…” no more!
brew install caskroom/cask/brew-cask

casks=(
  1password
  atom
  cyberduck
  firefox
  gimp
  google-chrome
  grandperspective
  iterm2
  openoffice
  scribus
  sequel-pro
  spectacle
  transmission
  vagrant
  virtualbox
  vlc
)

for cask in ${casks[@]} ; do
  brew cask install $cask
done

brew cask cleanup
