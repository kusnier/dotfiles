#!/bin/bash

# Make sure we’re using the latest Homebrew, and upgrade any already-installed formulae
# vim: ft=sh
brew update && brew upgrade

brew install macvim --override-system-vim

brews=(
  ag
  atk
  autojump
  autossh
  cairo
  cmake
  colordiff
  crash
  csvprintf
  ctags
  dia
  figlet
  fontforge
  gdk-pixbuf
  git
  git-extras
  glib
  gnu-tar
  growlnotify
  htmldoc
  htop
  hub
  id3lib
  id3v2
  imagemagick
  imagesnap
  intltool
  jasper
  jpeg
  jq
  libtiff
  links
  little-cms
  lynx
  markdown
  mobile-shell
  mongodb
  moreutils
  mplayer
  mysql
  ncftp
  netcat
  ngrep
  nmap
  node
  optipng
  pango
  phantomjs
  pixman
  pkg-config
  poppler
  potrace
  rtmpdump
  spark
  ssh-copy-id
  tree
  unrar
  watch
  webkit2png
  wget
  yasm
  z
